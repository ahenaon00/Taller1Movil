<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InicioActivity">

    <ImageButton
        android:id="@+id/verTriqui"
        android:layout_width="297dp"
        android:layout_height="272dp"
        android:layout_marginBottom="30dp"
        android:background="#FFFFFF"
        android:src="@drawable/_3_3"
        app:layout_constraintBottom_toTopOf="@+id/verPilotos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/verPilotos"
        android:layout_width="297dp"
        android:layout_height="272dp"
        android:background="#FFFFFF"
        android:scaleType="fitXY"
        android:src="@drawable/formula_1_logo_0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/verTriqui" />


</androidx.constraintlayout.widget.ConstraintLayout>